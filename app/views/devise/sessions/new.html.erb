<div class="container max-height-100vh">
  <div class="card max-height-50vh ">
      <h2>Déjà inscrit? Connectez vous !</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "adresse email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "mot de passe" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
