<div class="container">
 <div class="form-group col-12">
  <h1>Rechercher une mission</h1>


              <%= form_tag missions_path, method: :get do %>
                  <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Que recherchez-vous? ðŸ”Ž"
                  %>
                  <%= submit_tag "Rechercher", class: "btn btn-primary " %>
              <% end %>
                </div>

  <div class="cards col-12" >
    <% @missions.each do |mission| %>
      <div class="card mission_card" id="mission-<%= mission.id %>">
          <%= link_to mission_path(mission) do%>
              <h1><%= mission.asso.name.capitalize%></h1>
              <h2><%= mission.title%></h2>
              <p><%= mission.type_mission.capitalize %></p>
              <h4><%= mission.dispo %><h4>
              <h5><%= mission.lieu %></h5>

            <% if user_signed_in? %>
              <%= render "missions/toggle_favorite", mission: mission, user: current_user, from: 'missions_index' %>
            <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

