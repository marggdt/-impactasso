<div class="container">

    <div class="main-container">

      <div class="show-card col-12 col-lg-6">
          <h1><%= @asso.name.capitalize %></h1> <%= image_svg(@asso) %>
            <p><%= @asso.description %></p>
            <h2><%= @asso.address.upcase %> , <%= @asso.zipcode%> - <%= @asso.city.upcase%></h2>
            <button> contacter </button>

          <div id="map"
            style="width: 100%; height: 200px;"
            data-markers="<%= @marker.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
      </div>


<div class="show-card col-12 col-lg-6">
          <h1> Missions en ligne :</h1>
          <ol>
          <% if @missions_around_me.to_a.empty? %>
            <p>Désolée nous n'avons aucune mission disponible pour le moment :( </p>
            <% elsif @missions_around_me.each do |mission| %>
                <li><%= link_to mission.title, asso_mission_path(mission) %></li>
            <% end %>
          <% end %>
          </ol>
      </div>
</div>


<div class="card">
 <div class="card-body">
   <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
